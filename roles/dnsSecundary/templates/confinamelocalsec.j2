key "tsig-key" {
    algorithm hmac-sha256;
    secret "{{ hostvars['192.168.57.10']['tsig_key_clean'] }}";
};

{% for zone in zones %}
zone "{{ zone.name }}" {
    type slave;
    file "/etc/bind/zones/db.{{ zone.name | replace('.', '_') }}";
    masters { {{ primary_ip }} key "tsig-key"; };
};
{% endfor %}

server {{ primary_ip }} {
    keys { "tsig-key"; };
};

