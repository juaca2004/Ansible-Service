{
  "Dhcp4": {
    "interfaces-config": {
      "interfaces": [ "enp0s8" ]
    },
    "control-socket": {
      "socket-type": "unix",
      "socket-name": "/tmp/kea-dhcp4.socket"
    },

    "lease-database": {
      "type": "mysql",
      "name": "kea_lease_db",
      "user": "kea",
      "password": "admin",
      "host": "localhost",
      "port": 3306
    },

    "renew-timer": 900,
    "rebind-timer": 1800,
    "valid-lifetime": 3600,

    "subnet4": [
      {
        "subnet": "192.168.88.0/24",
        "pools": [
          { "pool": "192.168.88.21 - 192.168.88.29" }
        ],
        "option-data": [
          {
            "name": "routers",
            "data": "192.168.88.1"
          },
          {
            "name": "domain-name-servers",
            "data": "192.168.88.170, 192.168.88.171"
          }
        ]
      }
    ]
  }
}

